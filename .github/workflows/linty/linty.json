{
  "abcdan": "linty",
  "gitignore": true,
  "verbose": true,
  "ignore": [
    "node_modules/",
    "vendor/",
    "*.test.go",
    "ignored_file.go",
    "linty.go"
  ],
  "lint": [
    {
      "type": "go",
      "regex": ".*\\.go$",
      "linter": "go.js"
    },
    {
      "type": "py",
      "regex": ".*\\.py$",
      "linter": "py.js"
    },
    {
      "type": "php",
      "regex": ".*\\.php$",
      "linter": "php.js"
    }
  ],
  "website": "https://linty.run"
}
