  "lint": [
    {"type": "go", "regex": ".*\\.go$"},
    {"type": "js", "regex": ".*\\.js$"},
    {"type": "py", "regex": ".*\\.py$"},
    {"type": "php", "regex": ".*\\.php$"},
    {"type": "java", "regex": ".*\\.java$"}
  ]
}
